    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">Bill</h4>
                                <p class="card-category"></p>
                            </div>
                            <div class="card-body">

                                @*<div class="row">*@

                                <div class="card-body">
                                    <div class="form-group">

                                        @*<div class="container-fluid">*@
                                        <div class="border border-primary">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <img src="../Content/assets/img/logo.png" class="img-responsive" height='60' width='50' />
                                                </div>
                                                <div class="col-md-7">
                                                    <img src="../Content/assets/img/fertilizer12.jpg" class="img-responsive" height='600' width='300' />
                                                </div>

                                                <div class="col-md-2">
                                                    <div class="row">
                                                        <label>Date:</label>
                                                        <input type="text" id="txtlnvDate" data-date-format="dd/MM/yyyy" class=" datepicker span11" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                                    </div>
                                                    <div class="row">
                                                        <label> Invoice No:</label>
                                                        <asp:Label runat="server" Text="Label"></asp:Label>
                                                    </div>
                                                </div>


                                                <div class="col-sm-6">
                                                    <form class="w3-container">
                                                        Customer Name:<input class="w3-input w3-hover-border-blue" type="text" id="txtCustomerName" data-toggle="tooltip" title="Search Customer by Name" value="" />
                                                        Customer Address:<input class="w3-input w3-hover-border-blue" type="text" id="txtCustomerAddress" value="" />
                                                        Contact Number:<input class="w3-input w3-hover-border-blue" type="text" id="txtCustomerNumber" value="" />
                                                        Date:<input class="w3-input w3-hover-border-blue" type="text" id="txtDate" value="" />
                                                    </form>
                                                </div>

                                                <div class=" col-sm-6">
                                                    <form class="w3-container">
                                                        Product Name:<input class="w3-input w3-hover-border-blue" type="text" id="txtProductName" value="" />
                                                        Price:<input class="w3-input w3-hover-border-blue" type="text" id="txtPrice" value="" />
                                                        No of Unit:<input class="w3-input w3-hover-border-blue" type="text" id="txtNoofUnit" value="" />
                                                        <input id="Submit" type="button" value="Submit" onclick="saveCustomer()" />
                                                    </form>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-4"></div>
                                                    <div class="col-md-4"></div>
                                                    <div class="col-md-4"></div>
                                                </div>
                                                <div class="container-fluid">
                                                    <div class="border border-primary">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                Description
                                                            </div>
                                                            <div class="col-md-2">
                                                                Qty
                                                            </div>
                                                            <div class="col-md-2">
                                                                Unit Price
                                                            </div>
                                                            <div class="col-md-2">
                                                                Total
                                                            </div>
                                                            <div class="col-md-11"></div>
                                                            <div class="col-md-11"></div>
                                                            <div class="col-md-11">
                                                                <div>
                                                                    <div class="col-md-11"></div>
                                                                    <div class="col-md-11"></div>
                                                                </div>
                                                                <div class="col-md-11"></div>
                                                                <div class="col-md-11"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class=" col-md-6">
                                                            <label> Payment /Remark Instructions</label>
                                                            <br>
                                                            <textarea id="Text2" runat="server" value="" class="form-control-lg w3-hover-border-blue" style="width:450px;"></textarea>
                                                        </div>
                                                        <div class="col-md-6">
                                                            Subtotal:<input id="Text2" runat="server" value="" class="form-control w3-input w3-hover-border-blue" />
                                                            GST 12% :<input id="Text2" runat="server" value="" class="form-control w3-input w3-hover-border-blue" />
                                                            Total Amount:<input id="Text2" runat="server" value="" class="form-control w3-input w3-hover-border-blue" />
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <input id="Text2" runat="server" value="" class="form-control-lg w3-hover-border-blue" />
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 w3-hover-border-blue">
                                                            PP.Signature
                                                        </div>
                                                        <div class="col-md-6">
                                                            Customer sign.
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

    <style>

        .ui-autocomplete {
            max-height: 300px;
            max-width: 500px;
            overflow-y: auto; /* prevent horizontal scrollbar */
            overflow-x: hidden; /* add padding to account for vertical scrollbar */
            z-index: 9999 !important;
            padding: 10px;
            cursor: pointer;
            background-color: #fff;
            list-style-type: none;
        }

            .ui-autocomplete > li {
                line-height: 21px;
                border-bottom: 1px solid;
            }

        #divSearchBox .input-search .form-control {
            border-radius: 0px !important;
            margin-top: 5px !important;
        }

        .ui-autocomplete > li:hover {
            background-color: #38A1F3;
            color: white;
        }

        #divSearchBox .input-search .input-search-icon {
            left: 0px !important;
        }

        #divSearchBox .input-search .input-search-icon, .input-search .input-search-close {
            top: 54% !important;
        }
    </style>
